
# Server Configuration
PORT=3000
NODE_ENV=development


# Browser Configuration
BROWSER_HEADLESS=false
BROWSER_SLOWMO=100
BROWSER_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Upload Configuration  
MAX_CONCURRENT_UPLOADS=2
UPLOAD_TIMEOUT=300000
RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Security
ENCRYPT_CREDENTIALS=true
SECRET_KEY=your-secret-key-here

# File Processing
MAX_FILE_SIZE=50MB
SUPPORTED_FORMATS=png,jpg,jpeg,gif
THUMBNAIL_SIZE=300

# Database
DATABASE_PATH=./data/database.sqlite

# Redis Configuration (Multi-user support)
REDIS_URL=redis://localhost:6380
REDIS_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Multi-user Settings
MAX_CONCURRENT_BROWSERS=5
SESSION_TTL=3600
USER_DATA_ISOLATION=true

# HyperDX Configuration
HYPERDX_API_URL=http://localhost:8090
HYPERDX_API_KEY=your-hyperdx-api-key-here
HYPERDX_REQUEST_TIMEOUT=30000

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USER=api
CLICKHOUSE_PASSWORD=api
CLICKHOUSE_TIMEOUT=30000

