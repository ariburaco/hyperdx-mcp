{
  "name": "hyperdx-template",
  "version": "2.0.0",
  "description": "Modern TypeScript-based MCP server template",
  "main": "src/main.ts",
  "bin": {
    "hyperdx-template": "./src/main.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "pm2:start": "pm2 start ecosystem.config.json",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs --lines 1000",
    "pm2:status": "pm2 status",
    "pm2:delete": "pm2 delete all",
    "pm2:list": "pm2 list",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "automation",
    "typescript",
    "puppeteer",
    "bun",
    "web-automation"
  ],
  "author": "ariburaco",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.19.2",
    "@modelcontextprotocol/sdk": "^1.18.0",
    "dotenv": "^17.2.2",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.9.7",
    "mcp-handler": "^1.0.2",
    "mime-types": "^3.0.1",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.20.0",
    "sharp": "^0.34.3",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@types/bun": "latest",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.1",
    "@types/node-fetch": "^2.6.13",
    "@types/tmp": "^0.2.6",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "eslint": "9.35.0",
    "pm2": "^5.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  }
}
